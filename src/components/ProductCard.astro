---
interface Props {
  name: string;
  slug: string;
  image: string;
  rating: number;
  price: string;
  commission?: string;
  guarantee: string;
  benefits: string[];
  affiliateLink: string;
  featured?: boolean;
}

const {
  name,
  slug,
  image,
  rating,
  price,
  commission,
  guarantee,
  benefits,
  affiliateLink,
  featured = false
} = Astro.props;

const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;

// SVG path constants
const starPath = "M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z";

const checkPath = "M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z";
---

{featured ? (
  <div class="bg-gradient-to-br from-dark-gray to-off-black border-2 border-gold rounded-xl overflow-hidden shadow-2xl hover:shadow-gold/20 transition-all duration-300">
    <div class="relative">
      <img
        src={image}
        alt={`${name} product image`}
        class="w-full h-64 object-cover"
        loading="lazy"
      />
      <div class="absolute top-4 right-4 bg-gold text-off-black px-3 py-1 rounded-full text-sm font-bold">
        TOP PICK
      </div>
    </div>
    <div class="p-6">
      <h3 class="text-2xl font-bold text-gold mb-2">{name}</h3>

      <div class="flex items-center mb-4">
        <div class="flex">
          {Array.from({ length: fullStars }).map(() => (
            <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d={starPath} />
            </svg>
          ))}
          {hasHalfStar && (
            <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d={starPath} />
            </svg>
          )}
        </div>
        <span class="ml-2 text-off-white font-semibold">{rating}/5</span>
      </div>

      <div class="flex items-center justify-between mb-4">
        <span class="text-2xl font-bold text-off-white">{price}</span>
        <span class="text-sm text-gray-400">{guarantee}</span>
      </div>

      <ul class="space-y-2 mb-6">
        {benefits.slice(0, 3).map(benefit => (
          <li class="flex items-start">
            <svg class="w-5 h-5 text-gold mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d={checkPath} clip-rule="evenodd" />
            </svg>
            <span class="text-gray-300 text-sm">{benefit}</span>
          </li>
        ))}
      </ul>

      <div class="space-y-3">
        <a
          href={affiliateLink}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full bg-gold hover:bg-gold-dark text-off-black font-bold py-3 px-6 rounded-lg text-center transition-colors duration-300"
        >
          Visit Official Site &rarr;
        </a>
        <a
          href={`/products/${slug}`}
          class="block w-full border border-gold text-gold hover:bg-gold/10 font-semibold py-3 px-6 rounded-lg text-center transition-colors duration-300"
        >
          Read Full Review
        </a>
      </div>

      {commission && (
        <p class="text-xs text-gray-500 mt-4 text-center">
          {commission} commission for qualifying purchases
        </p>
      )}
    </div>
  </div>
) : (
  <div class="bg-dark-gray border border-gray-800 rounded-xl overflow-hidden hover:border-gold/50 transition-all duration-300">
    <div class="relative">
      <img
        src={image}
        alt={`${name} product image`}
        class="w-full h-48 object-cover"
        loading="lazy"
      />
    </div>
    <div class="p-5">
      <h3 class="text-xl font-bold text-off-white mb-2">{name}</h3>

      <div class="flex items-center mb-3">
        <div class="flex">
          {Array.from({ length: fullStars }).map(() => (
            <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d={starPath} />
            </svg>
          ))}
          {hasHalfStar && (
            <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d={starPath} />
            </svg>
          )}
        </div>
        <span class="ml-2 text-off-white text-sm font-semibold">{rating}/5</span>
        <span class="ml-auto text-gold font-bold">{price}</span>
      </div>

      <ul class="space-y-1 mb-4">
        {benefits.slice(0, 3).map(benefit => (
          <li class="flex items-start text-sm">
            <svg class="w-4 h-4 text-gold mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d={checkPath} clip-rule="evenodd" />
            </svg>
            <span class="text-gray-400">{benefit}</span>
          </li>
        ))}
      </ul>

      <a
        href={`/products/${slug}`}
        class="block w-full bg-gold hover:bg-gold-dark text-off-black font-bold py-2 px-4 rounded-lg text-center text-sm transition-colors duration-300"
      >
        Read Review &rarr;
      </a>
    </div>
  </div>
)}
