---
import { navigationData } from '../data/navigation';
import SocialFollowButtons from './SocialFollowButtons.astro';
const currentYear = new Date().getFullYear();
---

<footer class="bg-dark-gray border-t border-gold/20 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1">
        <h3 class="text-xl font-bold text-gold mb-4">The Best Offers Around</h3>
        <p class="text-gray-400 text-sm">
          Expert reviews of premium health supplements. We help men make informed decisions about their health and wellness.
        </p>
      </div>

      <!-- Categories -->
      {navigationData.map(item => (
        item.children && (
          <div>
            <h4 class="text-lg font-semibold mb-4">{item.name}</h4>
            <ul class="space-y-2">
              {item.children.map(child => (
                <li><a href={child.href} class="text-gray-400 hover:text-gold text-sm transition-colors">{child.name}</a></li>
              ))}
            </ul>
          </div>
        )
      ))}

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/blog" class="text-gray-400 hover:text-gold text-sm transition-colors">Blog</a></li>
          <li><a href="/about" class="text-gray-400 hover:text-gold text-sm transition-colors">About Us</a></li>
          <li><a href="/contact" class="text-gray-400 hover:text-gold text-sm transition-colors">Contact</a></li>
          <li><a href="/privacy" class="text-gray-400 hover:text-gold text-sm transition-colors">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Top Products -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Top Products</h4>
        <ul class="space-y-2">
          <li><a href="/products/testosil" class="text-gray-400 hover:text-gold text-sm transition-colors">Testosil</a></li>
          <li><a href="/products/vigrx-plus" class="text-gray-400 hover:text-gold text-sm transition-colors">VigRX Plus</a></li>
          <li><a href="/products/calmlean" class="text-gray-400 hover:text-gold text-sm transition-colors">CalmLean</a></li>
          <li><a href="/products/genf20" class="text-gray-400 hover:text-gold text-sm transition-colors">GenF20</a></li>
        </ul>
      </div>
    </div>

    <!-- Social Follow -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col items-center gap-4">
        <h4 class="text-lg font-semibold text-gray-300">Follow Us</h4>
        <SocialFollowButtons layout="horizontal" size="md" showLabels={true} />
      </div>
    </div>

    <!-- Affiliate Disclosure -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <p class="text-gray-500 text-xs text-center leading-relaxed">
        <strong>Disclosure:</strong> This website contains affiliate links. We may earn a commission if you purchase through our links, at no extra cost to you. This supports our research and content creation. We only recommend products we believe in based on thorough research and analysis.
      </p>
    </div>

    <!-- Copyright -->
    <div class="mt-4 text-center">
      <p class="text-gray-500 text-sm">
        &copy; {currentYear} The Best Offers Around. All rights reserved.
      </p>
    </div>
  </div>
</footer>
