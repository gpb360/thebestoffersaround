---
/**
 * Social Share Buttons Component
 * Makes content easily shareable with tracking
 */

interface Props {
  url: string;
  title: string;
  description: string;
  image?: string;
  platforms?: ('twitter' | 'linkedin' | 'facebook' | 'pinterest' | 'email' | 'copy')[];
  showLabels?: boolean;
  orientation?: 'horizontal' | 'vertical';
  sticky?: boolean;
}

const {
  url,
  title,
  description,
  image,
  platforms = ['twitter', 'linkedin', 'facebook', 'copy'],
  showLabels = false,
  orientation = 'horizontal',
  sticky = false
} = Astro.props;

const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);

// Platform share URLs
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}&hashtags=MensHealth,Supplements,Testosterone&via=thebestoffers`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}&quote=${encodedTitle}`,
  pinterest: `https://pinterest.com/pin/create/button/?url=${encodedUrl}&media=${image ? encodeURIComponent(image) : ''}&description=${encodedDescription}`,
  email: `mailto:?subject=${encodedTitle}&body=Check out this article: ${encodedUrl}`,
};

const orientationClass = orientation === 'vertical'
  ? 'flex-col gap-2'
  : 'flex-row flex-wrap gap-2';

const stickyClass = sticky
  ? 'sticky top-4'
  : '';
---

<div class={`social-share-buttons ${orientationClass} ${stickyClass}`} data-share-url={url}>
  {platforms.includes('twitter') && (
    <a
      href={shareUrls.twitter}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-twitter flex items-center gap-2 px-4 py-2 bg-black hover:bg-gray-800 text-white rounded transition duration-200"
      data-platform="twitter"
      aria-label="Share on Twitter/X"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      {showLabels && <span class="text-sm font-medium">Share</span>}
    </a>
  )}

  {platforms.includes('linkedin') && (
    <a
      href={shareUrls.linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-linkedin flex items-center gap-2 px-4 py-2 bg-[#0077b5] hover:bg-[#005885] text-white rounded transition duration-200"
      data-platform="linkedin"
      aria-label="Share on LinkedIn"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      {showLabels && <span class="text-sm font-medium">Share</span>}
    </a>
  )}

  {platforms.includes('facebook') && (
    <a
      href={shareUrls.facebook}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-facebook flex items-center gap-2 px-4 py-2 bg-[#1877f2] hover:bg-[#0d65d9] text-white rounded transition duration-200"
      data-platform="facebook"
      aria-label="Share on Facebook"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      {showLabels && <span class="text-sm font-medium">Share</span>}
    </a>
  )}

  {platforms.includes('pinterest') && image && (
    <a
      href={shareUrls.pinterest}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-pinterest flex items-center gap-2 px-4 py-2 bg-[#bd081c] hover:bg-[#a30618] text-white rounded transition duration-200"
      data-platform="pinterest"
      aria-label="Share on Pinterest"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.632-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
      </svg>
      {showLabels && <span class="text-sm font-medium">Pin</span>}
    </a>
  )}

  {platforms.includes('email') && (
    <a
      href={shareUrls.email}
      class="share-button share-email flex items-center gap-2 px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded transition duration-200"
      data-platform="email"
      aria-label="Share via email"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      {showLabels && <span class="text-sm font-medium">Email</span>}
    </a>
  )}

  {platforms.includes('copy') && (
    <button
      class="share-button share-copy flex items-center gap-2 px-4 py-2 bg-gold hover:bg-gold/90 text-off-black rounded transition duration-200"
      data-platform="copy"
      aria-label="Copy link to clipboard"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
      {showLabels && <span class="text-sm font-medium">Copy</span>}
    </button>
  )}

  <!-- Copy success toast -->
  <div id="copy-toast" class="hidden fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50">
    âœ“ Link copied to clipboard!
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.social-share-buttons');
    const shareUrl = container?.getAttribute('data-share-url');
    const copyButton = container?.querySelector('[data-platform="copy"]');
    const toast = document.getElementById('copy-toast');

    // Track all share button clicks
    const shareButtons = container?.querySelectorAll('.share-button');

    shareButtons?.forEach(button => {
      button.addEventListener('click', (e) => {
        const platform = button.getAttribute('data-platform');

        // Track share event
        if (window.posthog && platform !== 'copy') {
          window.posthog.capture('share_button_clicked', {
            platform,
            url: shareUrl,
            timestamp: new Date().toISOString()
          });
        }

        // Handle copy link
        if (platform === 'copy') {
          e.preventDefault();

          navigator.clipboard.writeText(shareUrl).then(() => {
            // Show toast
            toast?.classList.remove('hidden');
            setTimeout(() => toast?.classList.add('hidden'), 2000);

            // Track copy event
            if (window.posthog) {
              window.posthog.capture('share_copied', {
                url: shareUrl,
                timestamp: new Date().toISOString()
              });
            }
          }).catch(err => {
            console.error('Failed to copy:', err);
          });
        }
      });
    });
  });
</script>

<style>
  @media (max-width: 768px) {
    .social-share-buttons {
      flex-direction: row !important;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
