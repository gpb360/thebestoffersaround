---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Products', href: '/products' },
    { linkText: 'Categories', href: '/categories' },
    { linkText: 'About', href: '/about' },
    { linkText: 'Contact', href: '/contact' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24 border-b border-gray-700">
    <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary to-complementary bg-clip-text text-transparent hover:opacity-80 transition">
        TheBestOffersAround
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-6 gap-y-2">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-2 py-1 hover:text-primary transition no-underline">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
