---
/**
 * Social Follow Buttons Component
 * Social media profile links for footer and about pages
 */

interface Props {
  layout?: 'horizontal' | 'vertical';
  size?: 'sm' | 'md' | 'lg';
  showLabels?: boolean;
}

const {
  layout = 'horizontal',
  size = 'md',
  showLabels = false
} = Astro.props;

const sizeClasses = {
  sm: 'w-8 h-8',
  md: 'w-10 h-10',
  lg: 'w-12 h-12'
};

const iconClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6'
};

const layoutClass = layout === 'vertical'
  ? 'flex-col gap-3'
  : 'flex-row gap-3';

const iconSizeClass = iconClasses[size];
---

<div class={`social-follow-buttons flex ${layoutClass} items-center`}>
  <!-- Twitter/X -->
  <a
    href="https://twitter.com/thebestoffers"
    target="_blank"
    rel="noopener noreferrer"
    class="social-link group flex items-center gap-2 px-4 py-2 bg-black hover:bg-gray-800 text-white rounded-full transition duration-200"
    aria-label="Follow us on Twitter/X"
  >
    <svg class={iconSizeClass} fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    {showLabels && <span class="text-sm font-medium group-hover:underline">Follow @thebestoffers</span>}
  </a>

  <!-- Facebook -->
  <a
    href="https://facebook.com/thebestoffersaround"
    target="_blank"
    rel="noopener noreferrer"
    class="social-link group flex items-center gap-2 px-4 py-2 bg-[#1877f2] hover:bg-[#0d65d9] text-white rounded-full transition duration-200"
    aria-label="Follow us on Facebook"
  >
    <svg class={iconSizeClass} fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
    {showLabels && <span class="text-sm font-medium group-hover:underline">Like Us</span>}
  </a>

  <!-- LinkedIn -->
  <a
    href="https://linkedin.com/company/thebestoffersaround"
    target="_blank"
    rel="noopener noreferrer"
    class="social-link group flex items-center gap-2 px-4 py-2 bg-[#0077b5] hover:bg-[#005885] text-white rounded-full transition duration-200"
    aria-label="Follow us on LinkedIn"
  >
    <svg class={iconSizeClass} fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    {showLabels && <span class="text-sm font-medium group-hover:underline">Follow</span>}
  </a>

  <!-- RSS Feed -->
  <a
    href="/rss.xml"
    class="social-link group flex items-center gap-2 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-full transition duration-200"
    aria-label="Subscribe to RSS feed"
  >
    <svg class={iconSizeClass} fill="currentColor" viewBox="0 0 24 24">
      <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/>
    </svg>
    {showLabels && <span class="text-sm font-medium group-hover:underline">RSS Feed</span>}
  </a>
</div>

<script>
  // Track social follow clicks
  document.addEventListener('DOMContentLoaded', () => {
    const socialLinks = document.querySelectorAll('.social-link');

    socialLinks.forEach(link => {
      link.addEventListener('click', () => {
        const platform = link.getAttribute('aria-label')?.toLowerCase().split(' ').pop();

        if (window.posthog) {
          window.posthog.capture('social_follow_clicked', {
            platform,
            timestamp: new Date().toISOString()
          });
        }
      });
    });
  });
</script>
