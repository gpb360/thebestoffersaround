---
interface Props {
  id: string;
  name: string;
  description: string;
  icon: string;
}

const { id, name, description, icon } = Astro.props;
---

<a 
  href={`/category/${id}`}
  class="category-card block bg-gray-800 rounded-lg p-6 text-center hover:bg-gray-700 transition-all duration-300 hover:-translate-y-1 no-underline"
>
  <div class="text-5xl mb-3">{icon}</div>
  <h3 class="text-xl font-bold mb-2 text-white">{name}</h3>
  <p class="text-gray-400 text-sm">{description}</p>
</a>
