---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import products from '../../data/products.json';
import categories from '../../data/categories.json';

export function getStaticPaths() {
  return categories.map(category => ({
    params: { id: category.id },
  }));
}

const { id } = Astro.params;
const category = categories.find(c => c.id === id);
const categoryProducts = products.filter(p => p.category === id);

if (!category) {
  return Astro.redirect('/404');
}
---

<Layout title={`${category.name} - TheBestOffersAround.com`}>
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-4">
      <span class="text-5xl">{category.icon}</span>
      <div>
        <h1 class="mb-2">{category.name}</h1>
        <p class="text-gray-300 text-lg">{category.description}</p>
      </div>
    </div>
    
    <div class="flex items-center gap-4 text-sm text-gray-400">
      <a href="/" class="hover:text-primary">Home</a>
      <span>/</span>
      <a href="/categories" class="hover:text-primary">Categories</a>
      <span>/</span>
      <span class="text-white">{category.name}</span>
    </div>
  </div>

  {categoryProducts.length > 0 ? (
    <div>
      <div class="flex items-center justify-between mb-6">
        <p class="text-gray-300">
          Showing {categoryProducts.length} {categoryProducts.length === 1 ? 'product' : 'products'}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {categoryProducts.map(product => (
          <ProductCard {...product} />
        ))}
      </div>
    </div>
  ) : (
    <div class="text-center py-16 bg-gray-800 rounded-lg">
      <p class="text-xl text-gray-400">No products found in this category yet.</p>
      <a href="/categories" class="btn btn-lg mt-6">
        Browse Other Categories
      </a>
    </div>
  )}
</Layout>
