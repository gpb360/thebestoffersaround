---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - TheBestOffersAround.com">
  <div class="max-w-4xl mx-auto">
    <h1 class="mb-8">Contact Us</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <h2 class="text-2xl font-bold mb-4 text-white">Get In Touch</h2>
        <p class="text-gray-300 mb-6">
          Have a question, suggestion, or partnership inquiry? We'd love to hear from you. 
          Fill out the form and we'll get back to you as soon as possible.
        </p>
        
        <div class="space-y-4 text-gray-300">
          <div class="flex items-start gap-3">
            <span class="text-2xl">üìß</span>
            <div>
              <div class="font-semibold text-white">Email</div>
              <div>support@thebestoffersaround.com</div>
            </div>
          </div>
          
          <div class="flex items-start gap-3">
            <span class="text-2xl">‚è∞</span>
            <div>
              <div class="font-semibold text-white">Response Time</div>
              <div>Usually within 24-48 hours</div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-800 rounded-lg p-6">
        <form id="contact-form" class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
              Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-300 mb-2">
              Subject *
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-300 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-primary"
            ></textarea>
          </div>
          
          <button type="submit" class="btn w-full">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Thank you for your message! This is a demo - integrate with your email service.');
    (e.target as HTMLFormElement).reset();
  });
</script>
