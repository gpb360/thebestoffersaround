---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { blogPosts, type BlogPost } from '../../data/blog';

const allBlogPosts: BlogPost[] = Object.entries(blogPosts).map(([slug, post]) => ({...post, slug}));
---

<Layout title="Blog | Expert Health Supplement Advice - The Best Offers Around">
  <Header />

  <main>
    <section class="bg-gradient-to-br from-off-black via-dark-gray to-off-black py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="text-sm mb-4">
          <a href="/" class="text-gold hover:underline">Home</a>
          <span class="text-gray-500 mx-2">/</span>
          <span class="text-gray-400">Blog</span>
        </nav>

        <h1 class="text-4xl sm:text-5xl font-extrabold text-off-white mb-4">
          Health & Wellness Blog
        </h1>
        <p class="text-xl text-gray-400 max-w-3xl">
          Expert advice, research-backed insights, and honest reviews.
        </p>
      </div>
    </section>

    <section class="py-12 bg-dark-gray">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-r from-gold/20 to-gold/10 rounded-2xl overflow-hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
            <div class="aspect-video md:aspect-auto overflow-hidden">
              <img src={allBlogPosts[0].image} alt={`${allBlogPosts[0].title} featured image`} class="w-full h-full object-cover" />
            </div>
            <div class="p-8 md:p-12 flex flex-col justify-center">
              <span class="inline-block bg-gold text-off-black px-3 py-1 rounded-full text-sm font-bold mb-4 w-fit">
                FEATURED
              </span>
              <h2 class="text-3xl font-bold text-off-white mb-4">
                <a href={`/blog/${allBlogPosts[0].slug}`} class="hover:text-gold transition-colors">
                  {allBlogPosts[0].title}
                </a>
              </h2>
              <p class="text-gray-300 mb-6 text-lg">
                {allBlogPosts[0].excerpt}
              </p>
              <div class="flex items-center text-sm text-gray-400 mb-6">
                <span>{allBlogPosts[0].category}</span>
                <span class="mx-3">•</span>
                <span>{new Date(allBlogPosts[0].date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                <span class="mx-3">•</span>
                <span>{allBlogPosts[0].readTime}</span>
              </div>
              <a
                href={`/blog/${allBlogPosts[0].slug}`}
                class="inline-block bg-gold hover:bg-gold-dark text-off-black font-bold py-3 px-6 rounded-lg transition-colors duration-300 w-fit"
              >
                Read Article →
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-off-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-off-white mb-8">
          Latest Articles
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {allBlogPosts.map(post => (
            <article class="bg-dark-gray rounded-xl overflow-hidden hover:shadow-2xl hover:shadow-gold/10 transition-all duration-300 border border-gray-800 hover:border-gold/30">
              <div class="aspect-video bg-off-black flex items-center justify-center overflow-hidden">
                <img src={post.image} alt={`${post.title} featured image`} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
              </div>
              <div class="p-6">
                <div class="flex items-center text-xs text-gray-500 mb-3">
                  <span class="text-gold font-semibold">{post.category}</span>
                  <span class="mx-2">•</span>
                  <span>{post.readTime}</span>
                </div>
                <h3 class="text-xl font-bold text-off-white mb-3 line-clamp-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-gold transition-colors">
                    {post.title}
                  </a>
                </h3>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-500">
                    {new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  </span>
                  <a href={`/blog/${post.slug}`} class="text-gold hover:underline text-sm font-medium">
                    Read More →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
